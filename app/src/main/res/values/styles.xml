<resources>

    <style name="CustomStyle.MaterialCalendar" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="shapeAppearance">@style/ShapeAppearance.MyTheme.MediumComponent</item>
    </style>
    <style name="CustomStyle.MaterialAlertDialog" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="shapeAppearance">@style/ShapeAppearance.MyApp.MaterialDialog</item>
    </style>

    <style name="CustomStyle.Button.Circle.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="android:textColor">@color/grey600</item>
        <item name="android:padding">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="shapeAppearance">@style/CustomStyle.Button.Circle.ShapeAppearance</item>
    </style>

    <style name="CustomStyle.Button.Circle.ShapeAppearance" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="LightPopup" parent="@style/ThemeOverlay.AppCompat.Light" />

    <style name="FloatingLabelTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
</resources>
