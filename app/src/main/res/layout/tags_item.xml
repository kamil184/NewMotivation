<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    android:paddingStart="@dimen/spacing_16">

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/tag_item_checkbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:paddingStart="@dimen/spacing_8"
        android:textSize="18sp"
        android:background="@null"/>

    <EditText
        android:id="@+id/tag_item_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        tools:text="Work"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="50dp"
        android:singleLine="true"
        android:maxLines="1"
        />

    <ImageButton
        android:id="@+id/tag_item_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="?selectableItemBackground"
        android:gravity="start"
        android:padding="@dimen/spacing_12"
        app:srcCompat="?editDrawable" />

    <ImageButton
        android:id="@+id/tag_edit_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:padding="@dimen/spacing_12"
        android:gravity="start"
        android:background="?selectableItemBackground"
        app:srcCompat="?doneDrawable"
        android:visibility="gone"
        />

</RelativeLayout>
